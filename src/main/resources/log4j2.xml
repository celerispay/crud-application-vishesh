<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">
	 <Appenders>
			<File name="FileAppender" fileName="log/app.log">
			   <PatternLayout pattern="%d{HH:mm:ss.SSS} %highlight{%level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue, TRACE=cyan} %class - %msg%n" />
		   </File>
		   <Console name="STDOUT" target="SYSTEM_OUT">
			   <PatternLayout pattern="%d{HH:mm:ss.SSS} %highlight{%level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=white, DEBUG=blue, TRACE=green} - %msg%n" />
		   </Console>
	 </Appenders>	
	 <Loggers>
		   <Root level="INFO">
				 <AppenderRef ref="STDOUT"/>
		   </Root>
		   <Logger name="com.example.demo.security" level="ALL" additivity="true">
				 <AppenderRef ref="FileAppender" />
		   </Logger>
	 </Loggers>
</Configuration>